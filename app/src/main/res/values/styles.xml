<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar"  parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- toolbar -->
    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">#fff</item>
        <item name="colorAccent">#FFFFFF</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">#000000</item>

        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>


    <!-- BaiduMap Cluster Style -->
    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>


    <!-- *********** 搜索框 ********** -->
    <style name="SeachViewActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#242424</item>
        <item name="colorPrimaryDark">#242424</item>
        <item name="colorAccent">#FFFFFF</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!--  搜索框NavigationIcon和标题之间的距离 -->
    <style name="search_toolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- ************************************* -->

    <style name="CreateActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#242424</item>
        <item name="colorPrimaryDark">#242424</item>
        <item name="colorAccent">#9C9C9C</item>
    </style>



    <style name="tabText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="blue_radius">
        <item name="android:background">@color/btn_blue</item>
        <item name="android:radius">30dp</item>
    </style>

</resources>
