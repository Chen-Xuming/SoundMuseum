<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fm.AudioFmActivity"
    android:orientation="vertical"
    android:background="#0d1220">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fm_toolbar"
        app:title="白噪音电台"
        app:titleTextColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d1220"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        android:theme="@style/AppTheme.ActionBar"/>

    <ImageView
        android:id="@+id/fm_album_img"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/fm_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="The Weepies"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/fm_time_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/fm_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="8"
            android:thumb="@drawable/fm_seekbar_thumb_style"
            android:progressDrawable="@drawable/fm_seekbar_progress_style"/>

        <TextView
            android:id="@+id/fm_time_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.freedom.lauzy.playpauseviewlib.PlayPauseView
            android:id="@+id/fm_play_pause_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="80dp"
            app:btn_color="#0d1220"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/fm_next_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/ic_fm_next"
            android:clickable="true"/>

    </LinearLayout>


</LinearLayout>

